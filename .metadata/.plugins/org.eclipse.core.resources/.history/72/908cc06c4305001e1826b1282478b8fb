package entities;

public class Employee {

	public String name;
	public double grossSalary;
	public double tax;
	
	
	
	public double netSalary() {
		return grossSalary - tax;
	}
	double netNetSalary = netSalary();
	
	public void increaseSalary(double percentage) {
		this.netNetSalary += grossSalary * (percentage/100);
		
	}
	
	public String toString() {
		return name + ", $" + String.format("%.2f", netNetSalary);
	}
}
